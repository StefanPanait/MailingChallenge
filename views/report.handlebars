<div class="row">
    <div class="col-md12">
        <h3>Report</h3>
        <p>Total Emails: {{ emailCount }} Day: {{dayCount}}</p>
    </div>
</div>
<button type="button" id="nextDay-btn" data-loading-text="Waiting for server..." class="btn btn-primary">Fastward a day!</button>

<table class="table table-striped table-hover">
    {{#each domains}}
    <tr>
        <td>
            @{{name}}
        </td>
        <td>
            Total: {{totalCount}}
        </td>
        <td>
            Growth: % {{percentageGrowth}}
        </td>
    </tr>
    {{/each}}
</table>

<script>
$('#nextDay-btn').click(function() {
    var btn = $(this)
    btn.button('loading')
    window.location.pathname = "/passTime";
});
</script>
